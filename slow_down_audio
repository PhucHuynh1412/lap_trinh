from pydub import AudioSegment
from pydub.playback import play

def slow_down_audio(file_path, speed_factor):
    # Đọc tệp âm thanh MP3
    audio = AudioSegment.from_mp3(file_path)

    # Tính toán thời gian tăng giảm để chậm lại âm thanh
    new_duration = int(audio.duration_seconds / speed_factor * 1000)

    # Chậm lại âm thanh
    slowed_audio = audio.speedup(playback_speed=speed_factor, chunk_size=10)

    # Thay đổi độ dài của âm thanh chậm lại
    slowed_audio = slowed_audio.set_frame_rate(44100).set_channels(2).set_sample_width(2)

    # Phát lại âm thanh chậm lại
    play(slowed_audio)

# Đường dẫn tới tệp MP3
file_path = 'path/to/your/file.mp3'

# Hệ số tốc độ chậm (1.0 là bình thường, <1.0 để chậm lại)
speed_factor = 0.8

# Gọi hàm chậm lại âm thanh
slow_down_audio(file_path, speed_factor)

